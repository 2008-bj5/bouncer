<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/linux/</directory>
			<outputDirectory>/bin/</outputDirectory>
			<includes>
				<include>bouncer.sh</include>
			</includes>
			<fileMode>0775</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/sampleconf/</directory>
			<outputDirectory>/sampleconf/</outputDirectory>
			<includes>
				<include>bouncer.conf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources/</directory>
			<outputDirectory>/sampleconf/</outputDirectory>
			<includes>
				<include>ciphersuites.conf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/assembly/</directory>
			<outputDirectory>/conf/</outputDirectory>
			<includes>
				<include>safeToDelete.tmp</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/assembly/</directory>
			<outputDirectory>/keys/</outputDirectory>
			<includes>
				<include>safeToDelete.tmp</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/assembly/</directory>
			<outputDirectory>/log/</outputDirectory>
			<includes>
				<include>safeToDelete.tmp</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>